@model object

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <h2>Forgot Password</h2>
    
</div>

<div class="container-fluid">
    <div class="row">
        <h2 class="col-12 text-center">Forgot Password</h2>
        <div class="col-12 col-md-6 offset-md-3">
            <form method="post" action="/forgot-password">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="site-btn mr-auto">Submit</button>
                    <a asp-controller="Auth" asp-action="Login" class="site-btn mr-2">Login</a>
                    <a asp-controller="Auth" asp-action="Register" class="site-btn">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

