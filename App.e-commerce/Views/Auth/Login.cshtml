@using App.eCommerce.Models.ViewModels
@model LoginViewModel

<div class="container-fluid">
    <div class="row">
        <h2 class="col-12 text-center">Login</h2>
        <div class="col-12 col-md-6 offset-md-3">
            <form asp-controller="Auth" asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="site-btn mr-auto">Login</button>
                    <a asp-controller="Auth" asp-action="Register" class="site-btn mr-2">Register</a>
                    <a asp-controller="Auth" asp-action="ForgotPassword" class="site-btn">Forgot Password</a>
                </div>
            </form>
        </div>
    </div>
</div>